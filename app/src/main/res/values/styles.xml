<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>


    <style name="layout1" parent="Base.TextAppearance.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">@color/limegreen</item>
    </style>
    <style name="BarraTitulos" parent="Base.TextAppearance.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="Iconos" parent="Base.TextAppearance.AppCompat">
        <item name="android:layout_width">90dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="layout2" parent="Base.TextAppearance.AppCompat">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="layout3" parent="Base.TextAppearance.AppCompat">
        <item name="android:layout_width" >match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@color/white</item>
    </style>
    <style name="layout4" parent="Base.TextAppearance.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="titulItem" parent="Base.TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/limegreen</item>
        <item name="android:textSize">30dp</item>
    </style>
    <style name="imgItem">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">70dp</item>
    </style>
    <style name="layout5">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
    </style>
    <style name="DesTextItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="layout6" parent="Base.TextAppearance.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">160dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="imgDesc">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">140dp</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="layout7" parent="Base.TextAppearance.AppCompat">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">0.5</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>

    </style>
    <style name="titulo1" parent="Base.TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/darkred</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="descripcion" parent="Base.TextAppearance.AppCompat">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12dp</item>

    </style>
</resources>


